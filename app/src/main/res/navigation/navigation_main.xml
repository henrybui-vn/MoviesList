<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/moviesListFragment"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/moviesListFragment"
        android:name="com.android.movieslist.ui.MoviesListFragment"
        android:label="Movies List Fragment"
        tools:layout="@layout/fragment_movies_list">

        <action
            android:id="@+id/action_moviesListFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.android.movieslist.ui.MovieDetailsFragment"
        android:label="Movie Details Fragment"
        tools:layout="@layout/fragment_movie_details" />
</navigation>